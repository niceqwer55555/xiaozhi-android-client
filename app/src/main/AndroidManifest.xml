<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XiaoZhi"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.lhht.xiaozhi.activities.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lhht.xiaozhi.activities.SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/Theme.XiaoZhi.Settings"
            android:exported="false" />

        <activity
            android:name="com.lhht.xiaozhi.activities.VoiceCallActivity"
            android:theme="@style/Theme.Xiaozhi.Call"
            android:screenOrientation="portrait"
            android:exported="false" />

    </application>

</manifest> 